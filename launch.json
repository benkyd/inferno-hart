{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: g++ debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/inferno",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing"
              }
            ]
        }
    ]
}
